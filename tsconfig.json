{
  "compilerOptions": {
    "outDir": "./dist",       // Output compiled JS files here
    "rootDir": "./src",       // Specify the root directory for TypeScript files
    "target": "ES6",          // Use ES6 for JavaScript output
    "module": "commonjs",     // CommonJS module system
    "strict": true            // Enable strict type-checking options
  },
  "include": ["src/**/*.ts"],  // Include all TS files in src directory
  "exclude": ["node_modules"]
}
